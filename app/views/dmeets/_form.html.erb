<%= simple_form_for(@dmeet) do |f| %>
<%= f.error_notification %>
  <div class='field'>
    <div class='control'>
      <%= f.input :dmeet, label: "dmeet about it", input_html: { class: "textarea " }, wrapper: false, label_html: {class: 'label'}, placeholder: 'compose a dmeet...'%>
    </div>
  </div>
  <%= f.button :submit, class: 'button is-info' %>
<% end %>
